extends layout

block content
  h1 New Counter
  form(action="/set", method="post")
    .formbuilder-text.form-group.field-text-1642906452686
      label.formbuilder-text-label
      | API Key
      br
      input.form-control(type='text' placeholder='API Key (required to change data)' name='apiKey' autocomplete="off")

    .formbuilder-text.form-group.field-text-1642906452686
      label.formbuilder-text-label
        | Counter Name
        br
        input.form-control(type='text' placeholder='Counter name. No spaces or special characters is best.' name='name')

    .formbuilder-text.form-group.field-text-1642906452686
      label.formbuilder-text-label
        | !add Message
        br
        input.form-control(type='text' placeholder='Added 1 to counter. Counter is now: {0}.' name='addition')

    .formbuilder-text.form-group.field-text-1642906506876
      label.formbuilder-text-label
        | !stats Message
        br
      input.form-control(type='text' placeholder='Has been done {0} times.' name='message')

    .formbuilder-number.form-group.field-number-1642906564934
      label.formbuilder-number-label
        | Current Value
        br
        input.form-control.form-control-number(type='number' placeholder='0' name='amount' value='0')

    .formbuilder-number.form-group.field-number-1642906564934
      label.formbuilder-number-label
        | Sort Order For Stats
        br
        input.form-control.form-control-number(type='number' placeholder='0' name='orderInStats' value='0')

    .formbuilder-number.form-group.field-number-1642906564934
      label.formbuilder-number-label
        | Show in !stats?
        br
        input.form-control.form-control-number(type='checkbox' name='showInStats')

    .form-button-row
      .formbuilder-button.form-group.field-submit
        button.submit.btn-default.btn(type='submit' name='action' value='create' style='default') Submit Changes
        br

