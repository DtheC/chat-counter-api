extends layout

block content
  h1 New Counter
  form(action="/set", method="post")
    .formbuilder-text.form-group.field-text-1642906452686
      label.formbuilder-text-label
      | API Key
      br
      input.form-control(type='text' placeholder='API Key (required to change data)' name='apiKey' access='false' autocomplete="off")
    .formbuilder-text.form-group.field-text-1642906452686
      label.formbuilder-text-label
        | Counter Name
        br
        input.form-control(type='text' placeholder='Counter name. No spaces or special characters is best.' name='name' access='false')
    .formbuilder-text.form-group.field-text-1642906452686
      label.formbuilder-text-label
        | !add Message
        br
        input.form-control(type='text' placeholder='Added 1 to counter. Counter is now: {0}.' name='addition' access='false')
    .formbuilder-text.form-group.field-text-1642906506876
      label.formbuilder-text-label
        | !stats Message
        br
      input.form-control(type='text' placeholder='Has been done {0} times.' name='message' access='false')
    .formbuilder-number.form-group.field-number-1642906564934
      label.formbuilder-number-label
        | Current Value
        br
        input.form-control.form-control-number(type='number' placeholder='0' name='amount' access='false')
    .form-button-row
      .formbuilder-button.form-group.field-submit
        button.submit.btn-default.btn(type='submit' name='action' value='create' access='false' style='default') Submit Changes
        br

